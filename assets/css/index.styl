body
figure
	font-size 18px
	font-family: Helvetica
	margin 0
	padding 0

h1
	font-family: 'Audiowide', cursive;
h2
h3
h4
h5
h6
	font-family: 'Saira Extra Condensed', sans-serif;

header
	background-image url('../img/slide01.jpg')
	background-size cover
	background-position 70%
	background-repeat no-repeat
	background-origin margin
	font-family Helvetica
	min-height 700px
	width 100vw
	h1
		color azul
	h2
		font-size: 2.2em

.header--info
	position absolute
	top 20%
	margin auto 5%
	a
		color #fff
		text-decoration: none
		background rgba(azul, .6)
		padding .5em .8em
		border-radius 20px

.logo
	margin 0
	padding 0
	img
		width 100px

