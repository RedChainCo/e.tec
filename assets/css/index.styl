@import 'colors'
	// font-family 'Audiowide', cursive;
	// font-family 'Mansalva', cursive;
	// font-family 'Saira Extra Condensed', sans-serif;
	// font-family 'Covered By Your Grace', cursive;

// index
body
figure
	line-height: 1.3
	font-size 18px
	font-family Helvetica
	margin 0
	padding 0
h1
	font-family 'Audiowide', cursive;
p
	color rgba(#000, .8)
m5pp = 5%
// index

// header
header
	background-image url('../img/slide02.webp')
	background-size cover
	background-position 70%
	background-repeat no-repeat
	background-origin margin
	font-family Helvetica
	min-height 700px
	h1
		color azul
	h2
		font-size 2.2em
		margin-bottom 0
		margin-top 1.2em
	h6
		font-size 1em
		margin-top .5em
		color rgba(#000, .5)
	h6:after
	h6:before
		content "''"
.header--info
	position absolute
	top 16%
	margin auto 5%
	max-width: 900px
	a
		color #fff
		text-decoration none
		// background rgba(azul, .6)
		background rgba(azul--light-2, .6)
		padding .5em .8em
		border-radius 20px
	h1
		margin-top 2.2em
		img
			height 1em
	img
		height 100px
.icofont-layers
	font-size 5em
	color azul
// header

// intro
.box--one
	flex-flow wrap
	margin auto 5%
	flex-grow 1
	.box--one--intro
		max-width 562px
	.box--one--img
		flex-wrap wrap
		text-align center
		margin-top 1em
		margin-left auto
		margin-right auto
		display flex
		.box--one--imgs
			margin-top 2em
			width 33%
			p
				padding 0 2em
				color rgba(#000, .6)
			img
				width 80%
// intro

// price
.price
	.prices
		h2
			margin-top 3em
			margin-right 5%
			text-align right
		.price--intro
			display flex
			flex-direction: column
			align-items flex-end
			margin-right 5%
			margin-bottom 1em
.prices--boxes
	// overflow-x auto
	// white-space nowrap
	text-align center
	margin-left 4px
	margin-right 4px
	a
		text-decoration: none
	h3
		color #fff
		margin 1em auto
	[class^="prices--box--"]
		min-width 280px
		display inline-flex
		border-radius 10px
		align-items: center
		margin-top 5px
	.prices--box--1
		background azul--light-1
	.prices--box--2
		background azul--light-2
	.prices--box--3
		background azul--shadow-1
	.prices--box--4
		background azul--shadow-2
	.prices--box--5
		background azul--shadow-3
.terminos
	font-size: .8em
// price

// beneficios
.beneficios
	background-image url("../img/low-angle-photo-of-white-building-2763969.webp")
	background-position-x 50%
	background-position-y 50%
	background-repeat no-repeat
	background-attachment fixed
	background-size cover
	padding 1em 5%
	display inline-flex
	flex-wrap wrap
	padding-top 4em
	.beneficio
		width 30%
		padding .1em .5em
		box-sizing border-box
		margin-bottom 2em
		text-align center
		margin-left auto
		margin-right auto
		.beneficio--img
			max-width 25%
			min-width 100px
			display block
			margin-left auto
			margin-right auto
// beneficios

// cta
.cta
	color white
	padding-bottom 2em
	background azul--shadow-1
	.cta--box
		margin-right m5pp
		margin-left m5pp
		p
			color white
	h2
		margin-top 0
		padding-top 2em
		margin-left auto
		margin-right auto

.form
	margin-top 2em
.button
	margin-top 2em
	background white
	color azul--shadow-2
input
	border 0

label, input
	max-width 280px
	box-sizing border-box
	padding .5em
	display block
	border-radius: 5px
.clear
	margin-bottom 2em

#mc_embed_signup .mc-field-group
	padding-bottom: 0 !important
// cta

// footer
.footer-box
	background-image url('../img/footer.webp')
	background-size: cover
	background-repeat: no-repeat
	background-position-y: 50%
	min-height 1px
	padding-top 1em
	display flex
	flex-wrap: wrap
	.information
		justify-content: center
		flex-grow: 1
		align-content space-around
		margin 1em
		box-sizing: border-box
		text-align: center
		a
			color inherit
			text-decoration: none
		a:hover
			color azul--shadow-2
		img
			height 40px
		h3
			margin-top .5em
			font-size: .8em
.redchainco
	min-height 2em
	background #262626
	text-align: center
	a
		text-decoration none
	p
		margin 0
		padding-top 1em
		padding-bottom 1em
		text-decoration: none
		color #ffffff
		text-align: center
.whatsapp--fix
	--sizeWhatsApp 50px
	background #006355
	border-radius 50%
	padding 1em
	width var(--sizeWhatsApp)
	height var(--sizeWhatsApp)
	position fixed
	bottom 10px
	right 10px
	img
		width var(--sizeWhatsApp)
.whatsapp--fix:hover
	background #005244
// footer

@import 'index_mediaQuery'